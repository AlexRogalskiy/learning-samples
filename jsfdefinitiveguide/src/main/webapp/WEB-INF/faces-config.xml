<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
        version="2.3"
>
    <!-- JSF configuration here. -->
    <application>
        <message-bundle>i18n.messages</message-bundle>

        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>pt_BR</supported-locale>
            <supported-locale>hi</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.text</base-name>
            <var>text</var>
        </resource-bundle>
    </application>

    <factory>
        <exception-handler-factory>
            de.rieckpil.learning.jsf.AjaxExceptionHandler$Factory
        </exception-handler-factory>
    </factory>

    <protected-views>
        <url-pattern>/search.xhtml</url-pattern>
    </protected-views>
</faces-config>